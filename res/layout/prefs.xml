<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:key="root_prefs">
  
  	<dasher.android.SeekBarPreference
  	  android:key="MaxBitRateTimes100"
  	  android:title="Max speed"
      android:summary="Max rate of data entry in bits/sec"
      android:text="bps"
      android:max="1200" min="10" divisor="100"/>
    
    <PreferenceScreen
      android:title="Display Settings">
    	
    	<dasher.android.SeekBarPreference
    	  android:key="MinNodeSizeForText"
    	  android:title="Size for Text"
    	  android:summary="smallest node to have text, 4096=whole screen"
    	  min="10" android:max="100"/>
    	
	    <dasher.android.SeekBarPreference
	      android:key="NodeBudget"
	      android:title="Node budget"
	      android:summary="Higher = more detail; lower = faster"
	      android:max="10000" min="400"/>
	      
	     <dasher.android.SeekBarPreference
	       android:key="NonLinearX"
	       android:title="X Non-linearity"
	       android:summary="Log compress left of crosshair"
	       android:max="10"/>
	    
	    <dasher.android.SeekBarPreference
		  android:key="DasherFontSize"
		  android:title="Font Size"
		  android:summary="Small / medium / large"
		  min="1" android:max="3"/>
		  
		<dasher.android.SeekBarPreference
		  android:key="MarginWidth"
		  android:title="Margin Width"
		  min="100" android:max="1000"/>
	</PreferenceScreen>

    <ListPreference
      android:key="AlphabetID"
      android:title="Alphabet Name"/>

    <PreferenceScreen
      android:key="AndroidTilt"
      android:title="Tilt Control"
      android:widgetLayout="@layout/checkbox_tilt">
        <CheckBoxPreference
          android:key="AndroidTilt2D"
          android:title="2D (X &amp; Y)"
          android:summaryOn="Fwd/back &amp; up/down using 2 tilt axes" 
          android:summaryOff="Tilt up/down to go in a complete circle"/>
        <CheckBoxPreference
          android:key="AndroidTiltHoldToGo"
          android:title="Hold finger to go"/>
            <CheckBoxPreference
              android:key="AndroidTiltUsesTouchX"
              android:title="X Co-ordinate from touch"
              android:dependency="AndroidTiltHoldToGo"/>
    </PreferenceScreen>

    <PreferenceScreen
      android:key="AndroidTouch"
      android:title="Touch Control"
      android:widgetLayout="@layout/checkbox_touch">
        <CheckBoxPreference
          android:key="AndroidTouchUsesTiltX"
          android:title="X Co-ordinate from tilting"/>
        <dasher.android.SeekBarPreference
          android:key="TapTime"
          android:title="Max time for 'tap'"
          android:summary="Anything longer counts as drag"
          android:max="1000" min="10"
          text="ms"/>
        <dasher.android.SeekBarPreference
          android:key="Zoomsteps"
          android:title="Frames for tap"
          android:max="64" min="8"/>
    </PreferenceScreen>

    <PreferenceScreen
      android:key="AndroidBoxes"
      android:title="Box modes"
      android:summary="Divide into boxes and scan or tap"
      android:widgetLayout="@layout/checkbox_boxes">
        <dasher.android.SeekBarPreference
          android:key="ButtonMenuBoxes"
          android:title="No. of forward boxes"
          android:max="9" min="2" />
        <dasher.android.SeekBarPreference
          android:key="ButtonMenuSafety"
          android:title="Safety margin"
          android:summary="Don't zoom all the way into box"
          android:max="256" min="0"/>
        <dasher.android.SeekBarPreference
          android:key="ButtonModeNonuniformity"
          android:title="Nonuniformity of box sizes"
          android:max="89" min="-89"/>
        <CheckBoxPreference
          android:key="AndroidScan"
          android:title="Scan through boxes"
          android:summaryOn="Tap screen for highlighted box"
          android:summaryOff="Tap in box to select"/>
        <dasher.android.SeekBarPreference
          android:dependency="AndroidScan"
          android:key="ButtonScanTime"
          android:title="Scanning Time"
          android:summary="0 = tap top half of screen to scan"
          android:max="1000" min="0" />
    </PreferenceScreen>

    <PreferenceScreen
      android:key="AndroidCompass"
      android:title="Compass Mode"
      android:summary="Control with trackball"
      android:widgetLayout="@layout/checkbox_compass">
        <dasher.android.SeekBarPreference
          android:key="ButtonCompassModeRightZoom"
          android:title="Zoom Factor"
          android:max="10240" min="1024" text="/1024" />
    </PreferenceScreen>
 
    <PreferenceScreen
      android:title="General Input Settings">
        <CheckBoxPreference
      	  android:key="AutoSpeedControl"
      	  android:title="Auto speed control"/>
    	<CheckBoxPreference
      	  android:key="RemapXtreme"
      	  android:title="Remap X coords at extreme Y"/> 
	    <CheckBoxPreference
	      android:key="FullSpeedOnly"
	      android:title="Full-speed ahead/back"
	      android:summary="Always target closest left/right edge"/>
	    <CheckBoxPreference
	      android:key="AndroidDoubleX"
	      android:title="Touch on left half only"
	      android:summary="As if finger were twice as far to the right"/>
	</PreferenceScreen>
</PreferenceScreen>
