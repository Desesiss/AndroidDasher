<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
  android:key="root_prefs">
  
    <CheckBoxPreference
      android:key="AutoSpeedControl"
      android:title="Auto speed control"/>
    
    <ListPreference
      android:key="AlphabetID"
      android:title="Alphabet Name"/>

    <CheckBoxPreference
      android:key="RemapXtreme"
      android:title="Remap X coords at extreme Y"/>
  
    <CheckBoxPreference
      android:key="FullSpeedOnly"
      android:title="Full-speed ahead/back"
      android:summary="Always go towards whichever left/right edge is closest"/>
    
    <CheckBoxPreference
      android:key="AndroidDoubleX"
      android:title="Touch on left half only"
      android:summary="Treats any touch as being twice as far to the right"/>
         
    <PreferenceScreen
      android:key="AndroidTilt"
      android:title="Tilt Settings"
      android:dependency="AndroidTilt">
        <CheckBoxPreference
          android:key="AndroidTilt2D"
          android:title="2D (X &amp; Y)"
          android:summaryOn="Forwards/backwards and up/down using 2 tilt axes" 
          android:summaryOff="Up/down tilting steers in a complete circle"/>
        <CheckBoxPreference
          android:key="AndroidTiltHoldToGo"
          android:title="Hold finger to go"/>
            <CheckBoxPreference
              android:key="AndroidTiltUsesTouchX"
              android:title="X Co-ordinate from touch"
              android:dependency="AndroidTiltHoldToGo"/>
    </PreferenceScreen>

    <PreferenceScreen
      android:key="AndroidTouch"
      android:title="Touch Settings"
      android:dependency="AndroidTouch">
        <CheckBoxPreference
          android:key="AndroidTouchUsesTiltX"
          android:title="X Co-ordinate from tilting"/>
    </PreferenceScreen>
</PreferenceScreen>
